mixin getProp(getProp_btn)
	form(action="sendmail.php" method="post")
		label Введите Ваше имя
			input(data-req="1" type="text" placeholder="Ваше имя" name="name")
		+b.tab-form
			+e.head Выберите удобный способ связи
			+e.tabs-caption
				+e.item_active E-mail
				+e.item Telegram
				+e.item Viber
				+e.item VK
			+e.content-wrapp
				+e.content_active
					label Введите Ваш E-mail
						input(type="email" placeholder="Ваш E-mail" name="email" data-req="1")
				+e.content
					label Введите Ваш логин телеграм
						input(type="text" placeholder="Ваш логин телеграм" name="telegram" data-req="1")
				+e.content
					label Введите Ваш номер телефона
						input(type="tel" placeholder="Ваш номер телефона" name="phone" data-req="1")
				+e.content
					label Введите ссылку
						input(type="text" placeholder="Введите ссылку" name="links" data-req="1")
				input(type="hidden" value="" name="formname" class="js-val-input")
		button(type="submit" class="button button_lg send")
			span=getProp_btn