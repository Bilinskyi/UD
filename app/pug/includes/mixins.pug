
mixin email(email)
	a(href="mailto:"+email)&attributes(attributes)= email

mixin phone(phone)
	- var phone_replace = phone.replace(/\D+/g,"");
	a(href="tel:"+phone_replace)&attributes(attributes)= phone

mixin fancybox(fancybox_link, fancybox_name)
	a(href="#"+fancybox_link, class="fancybox")&attributes(attributes) !{fancybox_name}


mixin form1(form_btn_name, form_btn_val)
	form(action="sendmail.php" method="post")
		input(type="text" placeholder="Имя" name="name")
		input(type="tel" placeholder="Телефон" name="phone" data-req="1")
		input(type="email" placeholder="E-mail" name="email" data-req="1")
		input(type="hidden" name="nameform" value=form_btn_val)
		button(type="submit" class="send button")=form_btn_name

mixin bitem(bitem_title, bitem_txt, bitem_addClass, bitem_delay)
	.col-lg-4.col-md-4.col-sm-4.col-xs-6.col-xxs-12.animatedParent.animateOnce(class=bitem_addClass)
		+b.item-box.animated.fadeIn(class=bitem_delay)
			+e.square
				+e.I.img&attributes(attributes)
			+e.title !{bitem_title}
			.p !{bitem_txt}




mixin prf(prf_img, prf_title, prf_txt)
	a.flex-prf-item(href="#")
		span.tl
		span.tr
		span.bl
		span.br
		img(src=prf_img, alt="")
		span.center-content
			span.prf-item-title Landing page
			span.prf-item-head Региональный <br>центр недвижимости

		span.site-link Перейти на сайт
			i.icon-arrow-lg



mixin work(work_title, work_txt, work_svg)
	.col-lg-4.col-md-4.col-sm-4.col-xs-4.col-xxs-12
		+b.work-item
			svg(src=work_svg alt="")
			+e.title !{work_title}
